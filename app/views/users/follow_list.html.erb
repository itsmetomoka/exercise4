<div class = "container">
	<h2>Follow Users</h2>
		<% if @user.all_following.present? %>
		
		<table class="table">
			<thead>
				<tr>
					<th>Image</th>
					<th>Name</th>
					<th></th>
				</tr>
			</thead>
			<% @user.all_following.each do |user| %>
					<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: "50x50" %></td>
					<td><%=	user.name %></td>
					<td>フォロー数: <%= user.follow_count %></td>
					<td>フォロワー数: <%= user.followers_count %></td>
					<td><%=link_to "Show",user_path(user.id) %></td>
					</tr>
			<% end %>
		</table>
		
		<% else %>
		<p>ユーザーはいません</p>
	<% end %>
</div>