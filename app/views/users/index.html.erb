<div class="container">
	<div class="row">
		<div class="col-xs-3 col-md-3">
			<%= render 'users/profile', user: current_user %>
			<%= render 'books/sidebar', book:@book, user:current_user%>
		</div>
		<div class="col-xs-9 col-md-9">
			<h3>Users</h3>
				<div class="colored">
				<table class="table">
					<thead>
						<tr>
							<th>Image</th>
							<th>Name</th>
							<th></th>
						</tr>
					</thead>
					<% @users.each do |user| %>
							<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size: "50x50" %></td>
							<td><%=	user.name %></td>
							<td>フォロー数: <%= user.follow_count %></td>
							<td>フォロワー数: <%= user.followers_count %></td>
							<% if user != current_user %>
							  <% if current_user.following? user %>
							  <td><%= link_to "UnFollow", {controller: :users,action: :unfollow,user_id: user.id}, method: :put %>
							  </td>
							  <% else %>
							  <td><%= link_to "Follow", {controller: :users,action: :follow,user_id: user.id}, method: :put %>
							  </td>
							  <% end %>
							<% end %>
							<td><%=link_to "Show",user_path(user.id) %></td>
							</tr>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>